<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.tasks"
        android:label="home" />
    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.myapplication.history_my_tasks"
        android:label="tasks"
        tools:layout="@layout/fragment_history_my_tasks" />
    <fragment
        android:id="@+id/navigation_inbox"
        android:name="com.example.myapplication.inbox"
        android:label="inbox" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.myapplication.profile"
        android:label="profile"
        tools:layout="@layout/fragment_profile" />
</navigation>