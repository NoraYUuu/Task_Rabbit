<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tasks_branch"
    app:startDestination="@id/history_my_tasks">

    <fragment
        android:id="@+id/history_my_tasks"
        android:name="com.example.myapplication.my_tasks"
        android:label="fragment_history_my_tasks"
        tools:layout="@layout/fragment_my_tasks" >
        <action
            android:id="@+id/action_history_my_tasks_to_task_view"
            app:destination="@id/task_view"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_history_my_tasks_to_task_creation"
            app:destination="@id/task_creation"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/task_creation"
        android:name="com.example.myapplication.Task_creation"
        android:label="fragment_task_creation"
        tools:layout="@layout/fragment_task_creation" />
    <fragment
        android:id="@+id/task_view"
        android:name="com.example.myapplication.task_view"
        android:label="task_view" />
</navigation>