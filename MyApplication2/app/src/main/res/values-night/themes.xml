<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <!-- toolbar, home, tasks text color-->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="materialThemeOverlay">@color/light_blue_A200</item>
        <!-- color of bar that has battery etc-->
        <item name="colorPrimaryVariant">@color/purple_200</item>

        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_clear_24</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground" tools:targetApi="l">?attr/colorOnBackground</item>
        <item name="android:button" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
        <item name="actionModeBackground">@color/teal_200</item>
    </style>
    <style name="Theme.Login" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- toolbar, home, tasks text color-->
        <item name="colorPrimary">@color/teal_200</item>

        <!-- color of bar that has battery etc-->
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_clear_24</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Other" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <!-- toolbar, home, tasks text color-->
        <item name="colorPrimary">@color/teal_200</item>

        <!-- color of bar that has battery etc-->
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_clear_24</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
        <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
            <item name="colorAccent">@color/teal_700</item>
            <item name="android:textColor">@color/teal_700</item>
            <item name="actionModeBackground">@color/teal_200</item>
            <item name="actionModeCloseDrawable">@drawable/ic_baseline_clear_24</item>
        </style>

</resources>
