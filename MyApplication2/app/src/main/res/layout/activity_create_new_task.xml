<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="-10dp"
        android:background="@color/white">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="70dp"
            app:boxStrokeColor="@color/purple_500"
            android:id="@+id/editTaskTitle"
            app:startIconTint="@color/purple_500"
            app:hintTextColor="@color/teal_200"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_title_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title"
            app:endIconMode="clear_text"
            app:endIconTint="@color/purple_500"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="-10dp"
                android:clickable="true"
                android:maxLength="20"
                android:text="">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/purple_500"
            android:id="@+id/editDate"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            app:startIconTint="@color/purple_500"
            app:hintTextColor="@color/teal_200"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            app:startIconDrawable="@drawable/ic_baseline_date_icon"
            app:endIconMode="clear_text"
            android:hint="date"
            android:inputType="none"
            app:endIconTint="@color/purple_500"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:drawablePadding="-10dp"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTime"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/purple_500"
            android:layout_width="145dp"
            android:layout_gravity="right"
            app:startIconTint="@color/purple_500"
            app:hintTextColor="@color/teal_200"
            android:layout_marginTop="-72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:startIconDrawable="@drawable/ic_baseline_time_24"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="time"
            android:inputType="none"
            app:endIconMode="clear_text"
            app:endIconTint="@color/purple_500"
            app:errorEnabled="true"
            app:errorTextColor="@android:color/holo_red_light"
            app:boxStrokeErrorColor="@android:color/holo_red_light"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:drawablePadding="-10dp"
                android:id="@+id/editTextTime"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price"
            app:startIconTint="@color/purple_500"
            app:hintTextColor="@color/teal_200"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
            android:background="@android:color/transparent"
            android:id="@+id/editPrice"
            app:endIconMode="clear_text"
            app:endIconTint="@color/purple_500"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="-10dp"
                android:inputType="number"
                android:clickable="true"
                android:maxLength="6"
                android:digits="0123456789+$."
                android:id="@+id/price"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:counterEnabled="true"
                app:counterTextColor="@color/purple_500"
                app:counterMaxLength="140"
                app:startIconDrawable="@drawable/ic_baseline_edit_24"
                app:startIconTint="@color/purple_500"
                app:endIconMode="clear_text"
                android:maxLength="140"
                app:hintTextColor="@color/teal_200"
                app:endIconTint="@color/purple_500"
                android:id="@+id/editTaskDetails"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="description"
                    android:drawablePadding="2dp"
                    android:clickable="true"
                    android:maxLength="140"
                    android:inputType="textMultiLine"
                    android:id="@+id/TaskDetails"
                    android:text="">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:startIconTint="@color/purple_500"
                android:hint="location"
                app:hintTextColor="@color/teal_200"
                app:startIconDrawable="@drawable/ic_baseline_location_on_24"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:dropDownSelector="@color/teal_200"
                    android:freezesText="false"
                    android:drawablePadding="-10dp"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/outlined_exposed_dropdown_editable"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:startIconTint="@color/purple_500"
                android:hint="category"
                app:hintTextColor="@color/teal_200"
                app:startIconDrawable="@drawable/ic_baseline_category_24"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:freezesText="false"
                    android:drawablePadding="-10dp"
                    android:dropDownSelector="@color/teal_200"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/outlined_exposed_dropdown_editable_category"/>
            </com.google.android.material.textfield.TextInputLayout>

            <android.widget.Button
                android:id="@+id/editTaskSavebtn"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/teal_200"
                android:text="save"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textColor="@color/purple_700"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
