<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="-10dp"
        android:background="@color/white">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/accept_task_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:contextClickable="false"
            app:boxBackgroundMode="filled"
            app:startIconDrawable="@drawable/ic_baseline_warning_24"
            app:startIconTint="@color/testcolor1">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawablePadding="-10dp"
                android:text="Please confirm the following details of the task before accepting Tasker.
This action is final."
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="11sp">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="20dp"
            app:boxBackgroundMode="filled"
            android:id="@+id/accept_title"
            app:startIconTint="@color/testcolor1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_title_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="-10dp"
                android:maxLength="20"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:inputType="none"
                android:text="">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/accept_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconTint="@color/testcolor1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            app:boxBackgroundMode="filled"
            app:startIconDrawable="@drawable/ic_baseline_date_icon"
            android:clickable="false"
            android:inputType="none"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:drawablePadding="-10dp"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/accept_time"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="filled"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            app:startIconTint="@color/testcolor1"
            android:inputType="none"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:startIconDrawable="@drawable/ic_baseline_time_24"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:drawablePadding="-10dp"
                android:id="@+id/editTextTime"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconTint="@color/testcolor1"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
            android:background="@android:color/transparent"
            android:id="@+id/accept_price"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="-10dp"
                android:inputType="number"
                android:maxLength="3"
                android:digits="0123456789"
                android:id="@+id/price"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="140"
                app:startIconDrawable="@drawable/ic_baseline_edit_24"
                app:startIconTint="@color/testcolor1"
                android:maxLength="140"
                android:id="@+id/accept_desc"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawablePadding="-10dp"
                    android:maxLength="140"
                    android:inputType="textMultiLine"
                    android:id="@+id/TaskDetails"
                    android:text="">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundMode="filled"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:startIconTint="@color/testcolor1"
                app:startIconDrawable="@drawable/ic_baseline_location_on_24"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:freezesText="true"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:drawablePadding="-10dp"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/accept_outlined_exposed_dropdown_editable"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundMode="filled"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:startIconTint="@color/testcolor1"
                app:hintTextColor="@color/teal_200"
                app:startIconDrawable="@drawable/ic_baseline_category_24"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:freezesText="true"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:drawablePadding="-10dp"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/accept_outlined_exposed_dropdown_editable_category"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_confirm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/tag_incomplete"
                android:text="confirm"
                app:cornerRadius="20dp"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
