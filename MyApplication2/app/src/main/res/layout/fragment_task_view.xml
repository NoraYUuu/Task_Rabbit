<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/transparent">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="50dp"
            app:boxBackgroundMode="filled"
            app:startIconTint="@color/testcolor1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_title_24"
            android:layout_width="match_parent"
            app:endIconMode="none"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="-10dp"
                android:focusable="false"
                android:backgroundTint="@color/white"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:inputType="none"
                android:maxLength="21"
                android:id="@+id/taskViewTitle"
                android:text="">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconTint="@color/testcolor1"
            app:hintTextColor="@color/teal_200"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            app:startIconDrawable="@drawable/ic_baseline_date_icon">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taskViewDate"
                android:layout_width="match_parent"
                android:drawablePadding="-10dp"
                android:layout_height="match_parent"
                android:inputType="none"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/transparent"
            android:layout_width="match_parent"
            app:startIconTint="@color/testcolor1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:startIconDrawable="@drawable/ic_baseline_time_24"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:inputType="none">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:drawablePadding="-10dp"
                android:id="@+id/taskViewTime"
                tools:layout_editor_absoluteX="288dp"
                tools:layout_editor_absoluteY="230dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconTint="@color/testcolor1"
            app:hintTextColor="@color/teal_200"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
            android:background="@android:color/transparent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="-10dp"
                android:inputType="none"
                android:maxLength="6"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:digits="0123456789+$"
                android:id="@+id/taskViewPrice"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/transparent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:counterEnabled="true"
                app:counterTextColor="@color/testcolor1"
                app:counterMaxLength="140"
                app:startIconDrawable="@drawable/ic_baseline_edit_24"
                app:startIconTint="@color/testcolor1">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="-10dp"
                    android:maxLength="140"
                    android:inputType="none"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/taskViewDesc"
                    android:text="">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundMode="filled"
                app:endIconMode="none"

                app:boxStrokeColor="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:startIconTint="@color/testcolor1"
                app:startIconDrawable="@drawable/ic_baseline_location_on_24">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:freezesText="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawablePadding="-10dp"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/taskViewLocation"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                app:endIconMode="none"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                app:startIconTint="@color/testcolor1"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/transparent"
                android:inputType="none"
                app:startIconDrawable="@drawable/ic_baseline_category_24">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:freezesText="true"
                    android:focusable="false"
                    android:drawablePadding="-10dp"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                    android:id="@+id/taskViewCategory"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/taskViewChat"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/testcolor1"
                android:text="Chat"
                android:textAllCaps="false"
                app:cornerRadius="30dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/taskViewCall"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/testcolor1"
                android:text="Call Tasker"
                android:textAllCaps="false"
                app:cornerRadius="30dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
