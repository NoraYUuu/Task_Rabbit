<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/containerCreateTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/editPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/profile_image"
                android:cropToPadding="true"
                android:outlineSpotShadowColor="@color/purple_200"
                android:outlineAmbientShadowColor="@color/black"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/upload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-150dp"
                android:layout_marginRight="-90dp"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_add_a_photo_24_white"
                tools:ignore="VectorDrawableCompat"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/teal_200"
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="username"
                app:helperTextEnabled="true"
                app:counterMaxLength="15"
                app:errorTextColor="@android:color/holo_red_light"
                app:errorEnabled="true"
                app:boxStrokeErrorColor="@android:color/holo_red_light"
                android:layout_marginTop="2dp"
                app:startIconTint="@color/purple_500"
                app:hintTextColor="@color/teal_200"
                app:startIconDrawable="@drawable/ic_round_person_24"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="20"
                    tools:layout_editor_absoluteX="288dp"
                    tools:layout_editor_absoluteY="230dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/teal_200"
                app:startIconTint="@color/purple_500"
                app:hintTextColor="@color/teal_200"
                android:id="@+id/editPhone"
                app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperTextEnabled="true"
                app:errorTextColor="@android:color/holo_red_light"
                app:errorEnabled="true"
                android:background="@android:color/white"
                android:hint="phone number"
                android:layout_marginTop="-5dp"
                app:boxStrokeErrorColor="@android:color/holo_red_light"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="8"
                    android:digits="0123456789+"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="288dp"
                    tools:layout_editor_absoluteY="230dp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/teal_200"
                app:startIconDrawable="@drawable/ic_baseline_home_24"
                android:id="@+id/editAddress"
                app:startIconTint="@color/purple_500"
                app:hintTextColor="@color/teal_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextColor="@android:color/holo_red_light"
                app:boxStrokeErrorColor="@android:color/holo_red_light"
                app:errorEnabled="true"
                android:layout_marginTop="-5dp"
                android:background="@android:color/white"
                android:hint="address"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="288dp"
                    tools:layout_editor_absoluteY="230dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <android.widget.Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="save"
                android:layout_marginTop="30dp"
                android:background="@color/teal_200"
                android:textColor="@color/purple_700"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/teal_200"
                android:textColor="@color/purple_700"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textAllCaps="false"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:text="logout"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>